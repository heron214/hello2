<% provide(:title, "Sign in") %>
<h1>ログイン</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :メール %>
      <%= f.text_field :email %>

      <%= f.label :パスワード %>
      <%= f.password_field :password %>

      <%= f.submit "ログイン", class: "btn btn-large btn-primary" %>
    <% end %>

    <p><%= link_to "アカウントを作成する", signup_path %></p>
  </div>
</div>